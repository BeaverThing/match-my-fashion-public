  <h1>
    <b>SEARCH FOR FASHION PROFILES</b>
  </h1>
  <%= form_tag(search_profile_search_general_path, :method => 'get') do %>
      <p>
        First Name
        <br/>
        <%= text_field_tag "first_name" %>
      </p>
      <p>
        Last Name
        <br/>
        <%= text_field_tag "last_name" %>
      </p>
      <p>
        Gender
        <br/>
