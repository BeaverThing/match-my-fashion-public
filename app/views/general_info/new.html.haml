%head
  %title Match My Fashion
  = csrf_meta_tags
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

%body
  #HEADER
    %ul
      %li
        %a{:href => "login_info/new"} Login
      %li
        %a{:href => "login_info/new"} Sign Up
      %li
        %a{:href => ""} Profile Search
  #CONTENT
    %h1 Sign Up - General Information
    = form_for @general_info, :action => 'select_next', :url => general_info_select_next_path do |f|
      %p
      = f.label 'First Name'
      %br
      = f.text_field :first_name
      %p
      = f.label 'Last Name'
      %br
      = f.text_field :last_name
      %p
      = f.label 'Birth Month'
      %br
      = f.select :month_ofbirth, options_for_select([["Jan","Jan"],["Feb","Feb"],["Mar","Mar"],["Apr","Apr"],["May","May"],["Jun","Jun"],["Jul","Jul"],["Aug","Aug"],["Sep","Sep"],["Oct","Oct"],["Nov","Nov"],["Dec","Dec"]])
      %p
      = f.label 'Birth Day'
      %br
      = f.select :day_ofbirth, options_for_select([["01","01"],["02","02"],["03","03"],["04","04"],["05","05"],["06","06"],["07","07"],["08","08"],["09","09"],["10","10"],["11","11"],["12","12"],["13","13"],["14","14"],["15","15"],["16","16"],["17","17"],["18","18"],["19","19"],["20","20"],["21","21"],["22","22"],["23","23"],["24","24"],["25","25"],["26","26"],["27","27"],["28","28"],["29","29"],["30","30"],["31","31"]])
      %p
      = f.label 'Birth Year'
      %br
      = f.select :year_ofbirth, options_for_select([["2017","2017"],["2016","2016"],["2015","2015"],["2014","2014"],["2013","2013"],["2012","2012"],["2011","2011"],["2010","2010"],["2009","2009"],["2008","2008"],["2007","2007"],["2006","2006"],["2005","2005"],["2004","2004"],["2003","2003"],["2002","2002"],["2001","2001"],["2000","2000"]])
      %p
      = f.label 'Gender'
      %br
      = f.select :gender, options_for_select([["Female","Female"],["Male","Male"],["Other","Other"],["Prefer Not to Disclose","Prefer Not to Disclose"]])
      %p
      = f.label 'Country'
      %br
      = f.select :country, options_for_select([["United States", "United States"],["Canada","Canada"],["Mexico","Mexico"]])
      %p
      = f.label 'State'
      %br
      = f.text_field :state
      %p
      = f.label 'City'
      %br
      = f.text_field :city
      %p
      = f.label 'Compensation'
      %br
      = f.select :compensation, options_for_select([["Any Payment", "Any Payment"],["Assignment Based","Assignment Based"],["Paid Only","Paid Only"]])
      %p
      = f.label 'Facebook Link'
      %br
      = f.text_field :facebook_link
      %p
      = f.label 'LinkedIn Link'
      %br
      = f.text_field :linkedIn_link
      %p
      = f.label 'Instagram Link'
      %br
      = f.text_field :instagram_link
      %p
      = f.label 'Personal Website Link'
      %br
      = f.text_field :personalWebsite_link
      %p
      = f.label 'Biography'
      %br
      = f.text_area :bio
      %p
      = f.label 'Profession'
      %br
      = f.select :specific_profile_id, options_for_select([["Designer", "1"],["Model", "2"],["Photographer", "3"]])
      //Variable that stores what we clicked on select  
      %p
      = f.submit 'Next'
        
    = button_to 'Skip', root_path, :method => 'get'
        