<%= render :partial => "/layout/header" %>
<body>
  <%= render :partial => "/layout/body" %>
  <div id="GENERALFORM">
    <div id="NOTICE">
      <%= notice %>
    </div>
    <h1>
      <b>GENERAL INFORMATION</b>
    </h1>
    <%= form_for @general_info, :action => 'update', :url => general_info_update_path do |f| %>
      <p></p>
      <%= f.label 'First Name' %>
      <br/>
      <%= f.text_field :first_name %>
      <p></p>
      <%= f.label 'Last Name' %>
      <br/>
      <%= f.text_field :last_name %>
      <p></p>
      <%= f.label 'Birth Month' %>
      <br/>
      <%= f.select :month_ofbirth, options_for_select([["Jan","01"],["Feb","02"],["Mar","03"],["Apr","04"],["May","05"],["Jun","06"],["Jul","07"],["Aug","08"],["Sep","09"],["Oct","10"],["Nov","11"],["Dec","12"]]) %>
      <p></p>
      <%= f.label 'Birth Day' %>
      <br/>
      <%= f.select :day_ofbirth, options_for_select([["01","01"],["02","02"],["03","03"],["04","04"],["05","05"],["06","06"],["07","07"],["08","08"],["09","09"],["10","10"],["11","11"],["12","12"],["13","13"],["14","14"],["15","15"],["16","16"],["17","17"],["18","18"],["19","19"],["20","20"],["21","21"],["22","22"],["23","23"],["24","24"],["25","25"],["26","26"],["27","27"],["28","28"],["29","29"],["30","30"],["31","31"]]) %>
      <p></p>
      <%= f.label 'Birth Year' %>
      <br/>
      <%= f.select :year_ofbirth, options_for_select([["2017","2017"],["2016","2016"],["2015","2015"],["2014","2014"],["2013","2013"],["2012","2012"],["2011","2011"],["2010","2010"],["2009","2009"],["2008","2008"],["2007","2007"],["2006","2006"],["2005","2005"],["2004","2004"],["2003","2003"],["2002","2002"],["2001","2001"],["2000","2000"],["1999","1999"],["1998","1998"],["1997","1997"],["1996","1996"],["1995","1995"],["1994","1994"],["1993","1993"],["1992","1992"],["1991","1991"],["1990","1990"],["1989","1989"],["1988","1988"],["1987","1987"],["1986","1986"],["1985","1985"],["1984","1984"],["1983","1983"],["1982","1982"],["1981","1981"],["1980","1980"],["1979","1979"],["1978","1978"],["1977","1977"],["1976","1976"],["1975","1975"],["1974","1974"],["1973","1973"],["1972","1972"],["1971","1971"],["1970","1970"]]) %>
      <p></p>
      <%= f.label 'Gender' %>
      <br/>
      <%= f.select :gender, options_for_select([["Female","Female"],["Male","Male"],["Other","Other"],["Prefer Not to Disclose","Prefer Not to Disclose"]]) %>
      <p></p>
      <%= f.label 'Country' %>
      <br/>
      <%= f.select :country, options_for_select([["United States", "United States"],["Canada","Canada"],["Mexico","Mexico"]]) %>
      <p></p>
      <%= f.label 'State' %>
      <br/>
      <%= f.text_field :state %>
      <p></p>
      <%= f.label 'City' %>
      <br/>
      <%= f.text_field :city %>
      <p></p>
      <%= f.label 'Compensation' %>
      <br/>
      <%= f.select :compensation, options_for_select([["Any Payment", "Any Payment"],["Assignment Based","Assignment Based"],["Paid Only","Paid Only"]]) %>
      <p></p>
      <%= f.label 'Facebook Link' %>
      <br/>
      <%= f.text_field :facebook_link %>
      <p></p>
      <%= f.label 'LinkedIn Link' %>
      <br/>
      <%= f.text_field :linkedIn_link %>
      <p></p>
      <%= f.label 'Instagram Link' %>
      <br/>
      <%= f.text_field :instagram_link %>
      <p></p>
      <%= f.label 'Personal Website Link' %>
      <br/>
      <%= f.text_field :personalWebsite_link %>
      <p></p>
      <%= f.label 'Biography' %>
      <br/>
      <%= f.text_area :bio %>
      <p></p>
      <%= f.label :profile_picture %>
      <br/>
      <%= f.file_field :profile_picture %>
      <p></p>
      <%= f.label :cover_picture %>
      <br/>
      <%= f.file_field :cover_picture %>
      <p></p>
      <%= f.label :gallery_pictures %>
      <br/>
      <%= f.file_field :gallery_pictures, multiple: true %>
      <p></p>
      <%= f.submit 'Commit' %>
    <% end %>
    <%= button_to 'Cancel', '/show_profile', :method => 'get' %>
  </div>
<%= render :partial => "/layout/javascripts" %>
</body>
