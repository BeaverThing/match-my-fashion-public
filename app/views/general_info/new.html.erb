<%= render :partial => "/layout/header" %>
<body>
<%= render :partial => "/layout/navigation" %>
  <%= render :partial => "/layout/body" %>
  <section id="generalForm" class="container content-section text-center">
  <div id="GENERALFORM">
    <h1>
      <b>GENERAL INFORMATION</b>
    </h1>
    <p>
      <%= flash[:notice] %>
    </p>
    <table class="table-new-profile" align="center">
      <tr>

        <td>
          <div class="main-center">

          <%= form_for GeneralInfo.new, url: {action: "create"} do |f| %>

            <div class="form-group">
                  <label for="first_name" class="cols-sm-2 control-label">First Name</label>
                  <div class="cols-sm-10">
                    <div class="input-group">
                      <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                      <%= f.text_field :first_name, class: 'form-control', placeholder: 'Enter the First Name'%>
                    </div>
                  </div>
                </div>
                  <div class="form-group">
                    <label for="last_name" class="cols-sm-2 control-label">Last Name</label>
                    <div class="cols-sm-10">
                      <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                        <%= f.text_field :last_name, class: 'form-control', placeholder: 'Enter the Last Name' %>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="month_ofbirth" class="cols-sm-2 control-label">Month</label>
                    <div class="cols-sm-10">
                      <div class="input-group">
                          <%= f.select :month_ofbirth, options_for_select([["Jan","01"],["Feb","02"],["Mar","03"],["Apr","04"],["May","05"],["Jun","06"],["Jul","07"],["Aug","08"],["Sep","09"],["Oct","10"],["Nov","11"],["Dec","12"]]),{},{ :class => 'form-control' } %>
                      </div>
                    </div>
          s        </div>
                  <div class="form-group">
                    <label for="day_ofbirth" class="cols-sm-2 control-label">Day</label>
                    <div class="cols-sm-10">
                      <div class="input-group">
                        <%= f.select :day_ofbirth, options_for_select([["Please select a Day",""],["01","01"],["02","02"],["03","03"],["04","04"],["05","05"],["06","06"],["07","07"],["08","08"],["09","09"],["10","10"],["11","11"],["12","12"],["13","13"],["14","14"],["15","15"],["16","16"],["17","17"],["18","18"],["19","19"],["20","20"],["21","21"],["22","22"],["23","23"],["24","24"],["25","25"],["26","26"],["27","27"],["28","28"],["29","29"],["30","30"],["31","31"]]),{},{ :class => 'form-control' } %>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="year_ofbirth" class="cols-sm-2 control-label">Year</label>
                    <div class="cols-sm-10">
                      <div class="input-group">
                        <%= f.select :year_ofbirth, options_for_select([["Please select an Year",""],["2017","2017"],["2016","2016"],["2015","2015"],["2014","2014"],["2013","2013"],["2012","2012"],["2011","2011"],["2010","2010"],["2009","2009"],["2008","2008"],["2007","2007"],["2006","2006"],["2005","2005"],["2004","2004"],["2003","2003"],["2002","2002"],["2001","2001"],["2000","2000"],["1999","1999"],["1998","1998"],["1997","1997"],["1996","1996"],["1995","1995"],["1994","1994"],["1993","1993"],["1992","1992"],["1991","1991"],["1990","1990"],["1989","1989"],["1988","1988"],["1987","1987"],["1986","1986"],["1985","1985"],["1984","1984"],["1983","1983"],["1982","1982"],["1981","1981"],["1980","1980"],["1979","1979"],["1978","1978"],["1977","1977"],["1976","1976"],["1975","1975"],["1974","1974"],["1973","1973"],["1972","1972"],["1971","1971"],["1970","1970"]]),{},{ :class => 'form-control' } %>
                      </div>
                    </div>
                  </div>



                  <div class="form-group">
                    <label for="gender" class="cols-sm-2 control-label">Gender</label>
                    <div class="cols-sm-10">
                      <div class="input-group">
                        <%= f.select :gender, options_for_select([["Please select a Gender",""],['Any', 'Any'], ['Male', 'Male'], ['Female', 'Female']]),{},{ :class => 'form-control' }%>
                      </div>
                    </div>
                  </div>


                  <div class="form-group">
                    <label for="country" class="cols-sm-2 control-label">Country</label>
                    <div class="cols-sm-10">
                      <div class="input-group">
                        <%= f.select :country, options_for_select([["United States", "United States"]]),{},{ :class => 'form-control' } %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="state" class="cols-sm-2 control-label">State</label>
                    <div class="cols-sm-10">
                      <div class="input-group">
                        <%= f.select :state, options_for_select([["Please select a State",""],["Alabama","Alabama"],["Alaska","Alaska"],["American Samoa","American Samoa"],["Arizona","Arizona"],["Arkansas","Arkansas"],["California","California"],["Colorado","Colorado"],["Connecticut","Connecticut"],["Delaware","Delaware"],["District Of Columbia","District Of Columbia"],["Federated States Of Micronesia","Federated States Of Micronesia"],["Florida","Florida"],["Georgia","Georgia"],["Guam","Guam"],["Hawaii","Hawaii"],
                                                                 ["Idaho","Idaho"],["Illinois","Illinois"],["Indiana","Indiana"],["Iowa","Iowa"],["Kansas","Kansas"],["Kentucky","Kentucky"],["Louisiana","Louisiana"],["Maine","Maine"],["Marshall Islands","Marshall Islands"],
                                                                 ["Maryland","Maryland"],["Massachusetts","Massachusetts"],["Michigan","Michigan"],["Minnesota","Minnesota"],["Mississippi","Mississippi"],["Missouri","Missouri"],["Montana","Montana"],
                                                                 ["Nebraska","Nebraska"],["Nevada","Nevada"],["New Hampshire","New Hampshire"],["New Jersey","New Jersey"],["New Mexico","New Mexico"],["New York","New York"],["North Carolina","North Carolina"],
                                                                 ["North Dakota","North Dakota"],["Northern Mariana Islands","Northern Mariana Islands"],["Ohio","Ohio"],["Oklahoma","Oklahoma"],["Oregon","Oregon"],["Palau","Palau"],["Pennsylvania","Pennsylvania"],
                                                                 ["Puerto Rico","Puerto Rico"],["RI","Rhode Island"],["SC","South Carolina"],["SD","South Dakota"],["Tennessee","Tennessee"],["Texas","Texas"],["Utah","Utah"],["Vermont","Vermont"],
                                                                 ["Virgin Islands","Virgin Islands"],["Virginia","Virginia"],["Washington","Washington"],["West Virginia","West Virginia"],["Wisconsin","Wisconsin"],["Wyoming","Wyoming"]]),{},{ :class => 'form-control' }%>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="city" class="cols-sm-2 control-label">City</label>
                    <div class="cols-sm-10">
                      <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-map-marker fa" aria-hidden="true"></i></span>
                        <%= f.text_field :city, :class => 'form-control', :placeholder=> 'Enter the City' %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="compensation" class="cols-sm-2 control-label">Compensation</label>
                    <div class="cols-sm-10">
                      <div class="input-group">
                        <%= f.select :compensation, options_for_select([["Any Payment", "Any Payment"],["Assignment Based","Assignment Based"],["Paid Only","Paid Only"]]),{},{ :class => 'form-control' }%>
                       </div>
                    </div>
                  </div>
                    <div class="form-group">
                      <label for="facebook_link" class="cols-sm-2 control-label">Facebook Link</label>
                      <div class="cols-sm-10">
                        <div class="input-group">
                          <%= f.text_field :facebook_link, :placeholder=> 'Enter facebook profile link', :class => 'form-control'%>
                         </div>
                      </div>
                    </div>

                      <div class="form-group">
                        <label for="linkedIn_link" class="cols-sm-2 control-label">LinkedIn Link</label>
                        <div class="cols-sm-10">
                          <div class="input-group">
                            <%= f.text_field :linkedIn_link, :placeholder=> 'Enter LinkedIn profile link', :class => 'form-control' %>
                          </div>
                        </div>
                      </div>

                        <div class="form-group">
                          <label for="personalWebsite_link" class="cols-sm-2 control-label">Personal Website Link</label>
                          <div class="cols-sm-10">
                            <div class="input-group">
                              <%= f.text_field :personalWebsite_link, :placeholder=> 'Enter Personal Website Link', :class => 'form-control' %>
                            </div>
                          </div>
                        </div>


                       <div class="form-group">
                            <label for="bio" class="cols-sm-2 control-label">Biodata</label>
                            <div class="cols-sm-10">
                              <div class="input-group">
                                <%= f.text_area :bio, :placeholder=> 'Tell us briefly about yourself', :class => 'form-control' %>
                              </div>
                            </div>
                          </div>

                  <div class="form-group">
                    <label for="profession" class="cols-sm-2 control-label">Profession</label>
                    <div class="cols-sm-10">
                      <div class="input-group">
                        <%= f.select :specific_profile_id, options_for_select(@templates),{},{ :class => 'form-control' } %>
                      </div>
                    </div>
                  </div>

              <div class="form-group">
                <label for="profession" class="cols-sm-2 control-label">Profile Picture</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <%= f.file_field :profile_picture, accept: 'image/png,image/jpeg',:class => 'btn btn-default' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="profession" class="cols-sm-2 control-label">Cover Picture</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <%= f.file_field :cover_picture, accept: 'image/png,image/jpeg',:class => 'btn btn-default' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <label for="profession" class="cols-sm-2 control-label">Gallery Picture</label>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <%= f.file_field :gallery_pictures, multiple: true, accept: 'image/png,image/jpeg', :class => 'btn btn-default'%>
                  </div>
                </div>
              </div>
              <%= f.submit 'Next', :class => 'btn btn-default' %>
          <% end %>
          <br>
          <%= button_to 'Skip', root_path, :method => 'get',:class => 'btn btn-default' %>
          <p>
            * Indicates required field
          </p>
          </div>
      </td>

      </tr>

    </table>



  </section>
<%= render :partial => "/layout/javascripts" %>
</body>
<%= render :partial => "/layout/footer" %>
