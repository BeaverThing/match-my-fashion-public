<%= render :partial => "/layout/header" %>
<body>
<%= render :partial => "/layout/navigation" %>
  <%= render :partial => "/layout/body" %>
<section id="loginForm" class="container content-section text-center">
  <div id="LOGINFORM">
    <h1>
      <b>EDIT LOGIN INFORMATION</b>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
    </h1>


    <div class="container">
      <div class="row main">
        <div class="main-center">
          <%= form_for @login_info, :action => 'update', :url => login_info_update_path do |f| %>
            <form class="" method="post" action="#">
              <div class="form-group">
                <%= f.label :email, :class => 'cols-sm-2 control-label' %>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                    <%= f.text_field :email, :class => 'form-control', :placeholder => 'Enter your email' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :password, :class => 'cols-sm-2 control-label'%>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                    <%= f.password_field :password, :class => 'form-control', :id => 'password', :placeholder => 'Enter your Password' %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, :class => 'cols-sm-2 control-label'%>
                <div class="cols-sm-10">
                  <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                    <%= f.password_field :password_confirmation, :class => 'form-control', :id => 'confirm', :placeholder => 'Confirm your Password' %>
                  </div>
                </div>
              </div>

              <p class="button"></p>
              <%= f.submit "Submit" , :class => 'btn btn-default'%>
            </form>
          <% end %>
          <br>
          <%= button_to 'Cancel', '/show_profile', :method => 'get', :class => 'btn btn-default' %>
        </div>
      </div>
    </div>
  </div>
</section>
<%= render :partial => "/layout/javascripts" %>
</body>
<%= render :partial => "/layout/footer" %>