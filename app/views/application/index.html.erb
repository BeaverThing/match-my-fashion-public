<!DOCTYPE html>
<html lang="en">
<%= render :partial => "/layout/header" %>

<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">

<!-- Navigation -->
<%= render :partial => "/layout/navigation" %>
<!-- Intro Header -->
<header class="intro">
  <div class="intro-body">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <h1 class="brand-heading">FashioNXT</h1>
          <p class="intro-text">Your fashion search begins here
            <br></p>
        </div>
      </div>
    </div>
  </div>
</header>

<section id="adminTest">
  <div>
    <a href="/admin/create" class="btn btn-default btn-lg">Admin Create</a>
    <a href="/admin/edit" class="btn btn-default btn-lg">Admin Edit</a>
    <a href="/admin/delete" class="btn btn-default btn-lg">Admin Delete</a>
  </div>
</section>
<!-- Contact Section -->
<section id="contact" class="container content-section text-center">
